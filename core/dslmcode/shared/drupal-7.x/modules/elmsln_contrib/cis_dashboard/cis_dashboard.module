<?php

/**
 * Implements hook_menu().
 */
function cis_dashboard_menu() {
  $items['cis-dashboard'] = array(
    'title' => 'CIS Dashboard',
    'page callback' => 'cis_dashboard_page',
    'access arguments' => array('access cis dashboard'),
  );

  return $items;
}

/**
 * Implements hook_permission().
 */
function cis_dashboard_permission() {
  return array(
    'access cis dashboard' =>  array(
      'title' => t('Administer CIS dashboard'),
      'description' => t('Ability to access CIS managment dashboard.'),
    ),
  );
}

function cis_dashboard_page() {
	return theme('cis_dashbord');
}

/**
 * Implements hook_theme().
 */
function cis_dashboard_theme($existing, $type, $theme, $path) {
  return array(
    'cis_dashbord' => array(
      'variables' => array('content' => NULL),
      'template' => 'templates/cis-dashboard',
    ),
  );
}

/**
 * Implementation of hook_preprocess_cis_dashboard().
 */
function cis_dashboard_preprocess_cis_dashbord(&$variables) {
  drupal_add_js('https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.5/angular.js', 'external');
  drupal_add_js('https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.5/angular-resource.js', 'external');
  drupal_add_js(drupal_get_path('module', 'cis_dashboard') . '/js/app.js');
}
