<?php

/**
 * Implements hook_install().
 */
function hax_install() {
  drupal_set_message(t('Make sure you copy the contents of CopyThisStuff from the webcomponents module directory into sites/all/libraries/webcomponents/ and then run npm install to get dependencies in order for HAX to work.'), 'status');
  drupal_set_message(t('If you want to just run off of public CDNs. Then use either https://cdn.waxam.io/ or https://webcomponents.psu.edu/cdn/ on the admin/config/content/webcomponents page'), 'status');
}
