{
  "name": "mooc-content",
  "short_name": "mooc-content",
  "description": "Drop in MOOC content replacement but AJAX driven",
  "start_url": "/",
  "display": "standalone",
  "app_integration": {
    "title": "",
    "endpoints": {
      "data": {
        "callback": "_mooc_content_data",
        "property": "source-path"
      }
    },
    "properties": {
      "outline-title": {
        "callback": "_mooc_content_outline_title"
      }
    },
    "slots": {
      "content" : {
        "callback": "_mooc_content_render_content"
      },
      "navigation" : {
        "callback": "_mooc_content_render_navigation"
      },
      "options" : {
        "callback": "_mooc_content_render_options"
      },
      "outline" : {
        "callback": "_mooc_content_render_outline"
      }
    }
  }
}
